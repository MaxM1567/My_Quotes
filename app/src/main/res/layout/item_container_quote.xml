<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutQuote"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"

    android:background="@drawable/background_quote"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/textsContainer"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:background="@drawable/background_quote"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"

            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/background_quote_down">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <View
                    android:id="@+id/categoryIndicator"

                    android:layout_width="70dp"
                    android:layout_height="match_parent"

                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"

                    android:background="@drawable/background_category_indicator" />

                <TextView
                    android:id="@+id/textAuthor"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"

                    android:gravity="end"
                    android:textColor="@color/colorQuoteAuthor"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textDateTime"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"

                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorDataQuoteCreate"

                    android:textSize="8sp"
                    android:visibility="gone"
                    tools:ignore="SmallSp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>